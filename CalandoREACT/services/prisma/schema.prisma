// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model presidente{
  id Int @id @default(autoincrement())
  nombre String
  contacto String
}

model Liga {
  id Int @id @default(autoincrement())
  nombreLiga String
  edad_min Int
  edad_max Int
  categoria String
  nombrePresidente String
  contactoPresidente String
  logo String?   
  equipo   equipo[]
  partido  Partido[]
}

model equipo{
  id  Int @id @default(autoincrement())
  nombre String
  entrenador String
  logo String?
  ligaId Int?
  liga Liga?   @relation(fields: [ligaId], references: [id])
  jugadores jugador[]
  estadisticasJugador EstadisticaJugador[]
  estadisticasTotales EstadisticaJugadorTotal[]
}

model jugador {
  id              Int       @id @default(autoincrement())
  nombre          String
  apellidoPaterno String
  apellidoMaterno String?   @default("N/A")
  fechaNacimiento DateTime
  numero          Int
  posicion        Posicion
  foto            String?   @default("default.png")

  equipo   equipo @relation(fields: [equipoId], references: [id])
  equipoId Int

  estadisticasJugador EstadisticaJugador[]
  estadisticasTotales EstadisticaJugadorTotal[]

  @@unique([equipoId, numero]) // No permitir dos jugadores con mismo n√∫mero en un equipo
}

enum Posicion {
  P    // Pitcher
  C    // Catcher
  PrimeraBase  // Primera Base
  SegundaBase // Segunda Base
  TerceraBase  // Tercera Base
  SS   // Shortstop
  LF   // Left Field
  CF   // Center Field
  RF   // Right Field
  DH   // Designated Hitter (Bateador Designado)
  SUB  // Suplente
}

model Partido {
  id               Int      @id @default(autoincrement())
  fecha            DateTime
  lugar            String
  hora             String
  estado           EstadoPartido @default(PROGRAMADO)

  equipoId1        Int
  equipoId2        Int
  equipoNombre1    String
  equipoNombre2    String
  score1           Int      @default(0)
  score2           Int      @default(0)

  ligaId         Int
  liga           Liga           @relation(fields: [ligaId], references: [id])

  estadisticasJugador EstadisticaJugador[]
}

enum EstadoPartido {
  PROGRAMADO
  ENVIVO
  FINALIZADO
}

model EstadisticaJugador {
  id               Int      @id @default(autoincrement())
  partidoId        Int
  jugadorId        Int
  equipoId         Int

  H                Int      @default(0)  // Hits
  HR               Int      @default(0)  // Home Runs
  H2               Int      @default(0)  // Dobles
  H3               Int      @default(0)  // Triples
  BB               Int      @default(0)  // Bases por bolas
  BG               Int      @default(0)  // Bases ganadas
  turnosLegales    Int      @default(0)
  S                Int      @default(0)  // Sacrificios

  partido          Partido  @relation(fields: [partidoId], references: [id], onDelete: Cascade)
  jugador          jugador  @relation(fields: [jugadorId], references: [id], onDelete: Cascade)
  equipo           equipo   @relation(fields: [equipoId], references: [id], onDelete: Cascade)

  @@unique([partidoId, jugadorId])
  @@index([jugadorId])
  @@index([equipoId])
}

model EstadisticaJugadorTotal {
  id             Int      @id @default(autoincrement())
  jugadorId      Int
  equipoId       Int
  H              Int      @default(0)
  HR             Int      @default(0)
  H2             Int      @default(0)
  H3             Int      @default(0)
  BB             Int      @default(0)
  BG             Int      @default(0)
  turnosLegales  Int      @default(0)
  S              Int      @default(0)
  
  jugador        jugador  @relation(fields: [jugadorId], references: [id], onDelete: Cascade)
  equipo         equipo   @relation(fields: [equipoId], references: [id], onDelete: Cascade)
  
  @@unique([jugadorId, equipoId])
}